<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/functionParentLayout">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/top_border">

        <TextView
            android:id="@+id/functionName"
            android:gravity="center_vertical|end"
            android:textSize="20dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="49%" />

        <EditText
            android:id="@+id/valueView"
            android:gravity="center_vertical|start"
            android:textSize="14dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:layout_heightPercent="100%"
            app:layout_marginLeftPercent="51%"
            app:layout_widthPercent="24%"/>

        <Button
            android:id="@+id/onClick"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Odeslat"
            android:onClick="onClickAction"
            android:textSize="14dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_heightPercent="100%"
            app:layout_marginLeftPercent="76%"
            app:layout_widthPercent="24%">
            <tag android:id="@id/action" android:value="updateValue"></tag>
        </Button>
    </android.support.percent.PercentRelativeLayout>
</android.support.constraint.ConstraintLayout>